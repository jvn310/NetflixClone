@{
    ViewData["Title"] = "Manage Profiles";
}

@model List<NetflixClone.Models.Profile>

@{
    ViewData["Title"] = "Manage Profiles";
}

<h1>Manage Profiles</h1>
<div class="profiles-container">
    @if (Model != null && Model.Any())
    {
        @foreach (var profile in Model)
        {
            <div class="profile">
                <i class="fas fa-user-circle profile-icon" style="color: @profile.IconUrl;"></i>
                <p class="profile-name">@profile.Name</p>
                <a href="/Profile/EditProfile/@profile.Id">Edit</a>
                <form method="post" action="/Profile/DeleteProfile" style="display:inline;">
                    <input type="hidden" name="profileId" value="@profile.Id" />
                    <button type="submit" onclick="return confirm('Are you sure you want to delete this profile?');">Delete</button>
                </form>
            </div>
        }
    }
    else
    {
        <p>No profiles available to manage.</p>
    }
</div>
