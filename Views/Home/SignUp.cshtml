@{
    ViewData["Title"] = "Sign Up page";

}

        <div class="login-container">
            <h2>Sign In</h2>
    <form method="post" action="HomeNetflix">
                <input type="text" placeholder="Email or mobile ..." required class="text-field">
                <input type="password" placeholder="Password" class="text-field" required>
                <button type="submit" class="sign-in-btn">Sign In</button>
            </form>

            <div class="sign-in-options">
                <p class="option">OR</p>
                <button class="sign-in-code-btn">Use a Sign-In Code</button>
            </div>
    <a href="#" class="forgot-password">Forgot password?</a>


    <div class="options">
        <div class="checkbox">
            <input type="checkbox" id="remember">
            <label for="remember">Remember me</label>
        </div>
    </div>

            <div class="sign-up">
                <p>New to Netflix? <a href="#">Sign up now.</a></p>
            </div>

            <small>
                This page is protected by Google reCAPTCHA to ensure you're not a bot. <a href="#">Learn more.</a>
            </small>
        </div>
