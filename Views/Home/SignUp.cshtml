@{
    ViewData["Title"] = "Sign Up page";

}

        <div class="login-container">
            <h2>Sign In</h2>
    <form method="post" action="HomeNetflix">
                <input type="text" placeholder="Email or mobile ..." required class="text-field">
                <input type="password" placeholder="Password" class="text-field" required
               pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[@@!%*?&])[A-Za-z\d@@$!%*?&]{8,}"
               title="Password must be at least 8 characters long, with one uppercase letter, one lowercase letter, one number, and one special character.">
                <button type="submit" class="sign-in-btn">Sign In</button>
            </form>

            <div class="sign-in-options">
                <p class="option">OR</p>
                <button class="sign-in-code-btn">Use a Sign-In Code</button>
            </div>
    <a href="#" class="forgot-password">Forgot password?</a>


    <div class="options">
        <div class="checkbox">
            <input type="checkbox" id="remember">
            <label for="remember">Remember me</label>
        </div>
    </div>

            <div class="sign-up">
        <p><span class="new-user">New to Netflix?</span> <a href="#" class="sign-up-link">Sign up now.</a></p>
            </div>

            <small>
                This page is protected by Google reCAPTCHA to ensure you're not a bot. <a href="#" class="learn-more-link">Learn more.</a>
            </small>
        </div>
