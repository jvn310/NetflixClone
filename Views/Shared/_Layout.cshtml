<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - NetflixClone</title>
    <script src="https://kit.fontawesome.com/77cc4812f3.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/NetflixClone.styles.css" asp-append-version="true" />
</head>
<body class="@ViewData["BodyClass"]">
    <header>
        @if (ViewData["Page"]?.ToString() == "Home")
        {
            <nav class="navbar navbar-expand-lg">
                <div class="container-xxl">
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarNav">
                        <img src="~/images/Netflix-Logo-removebg-preview(1).png" alt="Netflix Logo" width="250" />

                        @if (ViewData["ShowSignIn"] is bool showSignIn && showSignIn)
                        {
                            <a asp-controller="Home" asp-action="SignUp" id="danger-btn" class="ms-auto">Sign In</a>

                        }
                        @if (ViewData["ShowSignOut"] is bool showSignOut && showSignOut)
                        {
                            <a asp-controller="Home" asp-action="Index" id="danger-btn" class="ms-auto">Sign Out</a>

                        }
                    </div>
                </div>
            </nav>
        }
        @if (ViewData["Page"]?.ToString() == "Movie")
        {
            <nav class="navbar navbar-expand-lg">
                <div class="container-xxl">
                <img src="~/images/Netflix-Logo-removebg-preview(1).png" alt="Netflix Logo" width="250" />
                     <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                                <a class="nav-link active" href="#">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">TV Shows</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Movies</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">New & Popular</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Browse by Language</a>
                        </li>
                    </ul>
                        <div class="navbar-icons ms-auto">
                            <a href="#" class="nav-icon"><i class="fas fa-search"></i></a>
                            <a href="#" class="nav-icon"><i class="fas fa-bell"></i></a>
                            <a href="#" class="nav-icon"><i class="fas fa-user-circle"></i></a>
                        </div>
                </div>
            </div>
        </nav>
        }

    </header>
    <div>
        <main role="main">
            @RenderBody()
        </main>
    </div>

    @if (ViewContext.RouteData.Values["controller"]?.ToString() == "Home" &&
    ViewContext.RouteData.Values["action"]?.ToString() == "Index")
    {
        <footer>
            <div class="footer-container">
            <div class="footer-column">
                <a href="#">FAQ</a>
                <a href="#">Investor Relations</a>
                <a href="#">Ways to Watch</a>
                <a href="#">Corporate Information</a>
                <a href="#">Only on Netflix</a>
            </div>

            <div class="footer-column">
                <a href="#">Help Center</a>
                <a href="#">Jobs</a>
                <a href="#">Terms of Use</a>
                <a href="#">Contact Us</a>
            </div>

            <div class="footer-column">
                <a href="#">Account</a>
                <a href="#">Redeem Gift Cards</a>
                <a href="#">Privacy</a>
                <a href="#">Speed Test</a>
            </div>

            <div class="footer-column">
                <a href="#">Media Center</a>
                <a href="#">Buy Gift Cards</a>
                <a href="#">Cookie Preferences</a>
                <a href="#">Legal Notices</a>
            </div>
        </div>

        <div class="language-selector">
            <select id="language">
                <option value="en">English</option>
            </select>
        </div>

        <div class="footer-bottom">
            Netflix South Africa
        </div>
    </footer>
    }
    else if (ViewContext.RouteData.Values["controller"]?.ToString() == "Home" &&
    ViewContext.RouteData.Values["action"]?.ToString() == "SignUp")
    {
    <footer>
        <div class="footer-container">
            <div class="footer-column">
                <a href="#">FAQ</a>
                <a href="#">Cookie Preferences</a>
            </div>

            <div class="footer-column">
                <a href="#">Help Center</a>
                <a href="#">Corporate Information</a>
            </div>

            <div class="footer-column">
                <a href="#">Terms Of Use</a>
            </div>

            <div class="footer-column">
                <a href="#">Privacy</a>
            </div>
        </div>

        <div class="language-selector">
            <select id="language">
                <option value="en">English</option>
            </select>
        </div>

        <div class="footer-bottom">
            Netflix South Africa
        </div>
    </footer>
    }

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://kit.fontawesome.com/77cc4812f3.js" crossorigin="anonymous"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
